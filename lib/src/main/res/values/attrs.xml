<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyScrollPicker">
        <attr name="itemsOnScreen" format="integer"/>
        <attr name="selectDelayMs" format="integer"/>
        <attr name="enableSnapFinisher" format="boolean"/>
        <attr name="scrollSpeedFactor" format="float"/>

        <attr name="easyOrientation" format="enum">
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="0"/>
        </attr>
    </declare-styleable>
</resources>